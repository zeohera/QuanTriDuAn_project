@model List<webMVC1.EF.OderDetail>
@{
    ViewBag.Title = "order_detail";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
    var order = (List<webMVC1.EF.Order>)ViewBag.order;

}

<h2>chi tiết đơn hàng</h2>

<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-head">
                <div class="table-responsive">
                    <table class="table table-striped table-bordered table-hover">
                        <thead>
                            <tr>
                                <th>mã sản phẩm</th>
                                <th>tên sản phẩm</th>
                                <th>giá sản phẩm</th>
                                <th>hình ảnh</th>
                                <th>số lượng</th>
                                <th>giá tiền</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr id="row_@item.ProductID">
                                    <td><p>@item.ProductID</p></td>
                                    <td>@item.Name</td>
                                    <td>@item.Price.GetValueOrDefault(0).ToString("N0")</td>
                                    <td><img width="120" src="/Content/Image/@item.Image" alt="Alternate Text" /></td>
                                    <td><p>@item.Quantity</p></td>
                                    <td><p>@item.Price_total.GetValueOrDefault(0).ToString("N0")</p></td>
                                </tr>
                            }
                        </tbody>

                    </table>
                </div>
            </div>
        </div>
        <div class="panel-body">
            @foreach(var ite in order)
            {
                if (ite.Status == 1)
                {
            <form>
                <input type="button" name="" class=" btn btn-danger btn_xuly" data-id="@ite.ID" value="Xu ly" />
            </form>
                }
                else
                { 
        <form>
            <p>da xu ly thanh cong</p>
        </form>
                }
            }
        </div>
    </div>
</div>