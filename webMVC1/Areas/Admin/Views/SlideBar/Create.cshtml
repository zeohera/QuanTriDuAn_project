@model webMVC1.EF.Slidebar
@{
    ViewBag.Title = "create";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}



@using (Html.BeginForm("create", "SlideBar", FormMethod.Post))
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    <h4>Thêm quảng cáo</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <div class="form-group">
        Tiêu đề quảng cáo
        <div class="col-2">
            @Html.TextAreaFor(model => model.title, new { htmlAttributes = new { @class = "col-2" } })
            @Html.ValidationMessageFor(model => model.title, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        Hình ảnh quảng cáo
        <div class="col-md-10">
            @Html.EditorFor(model => model.image, new
       {
           htmlAttributes = new { @class = "form-control", @type = "file" }
       })
            @Html.ValidationMessageFor(model => model.image, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        Trạng thái của quảng cáo
        <div class="col-md-10">
            @Html.CheckBoxFor(model => model.stastus, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.stastus, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Create" class="btn btn-danger" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Quay lại trang trước", "Index")
</div>
