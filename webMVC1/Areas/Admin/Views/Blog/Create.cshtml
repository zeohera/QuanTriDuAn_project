@model webMVC1.EF.Blog

@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}


@using (Html.BeginForm("Create", "Blog"))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Thêm bài viết</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="container">

            <div class="card o-hidden border-0 shadow-lg my-5">
                <div class="card-body p-0">
                    <!-- Nested Row within Card Body -->
                    <div class="row">
                        <div class="col-lg-5 d-none d-lg-block bg-register-image"></div>
                        <div class="col-lg-7">
                            <div class="p-5">
                                <div class="text-center">
                                    <h1 class="h4 text-gray-900 mb-4">Thêm bài viết</h1>
                                </div>
                                <form class="user" method="post">
                                    <div class="form-group row">
                                        <div class="col-sm-6 mb-3 mb-sm-0">
                                            Nhập Tên bài viết
                                            <div class="col-md-10">
                                                @Html.TextBoxFor(model => model.bl_name, new { htmlAttributes = new { @class = "form-control" } })
                                                @Html.ValidationMessageFor(model => model.bl_name, "", new { @class = "text-danger" })
                                            </div>
                                        </div>
                                        <div class="col-sm-6 mb-3 mb-sm-0">
                                            Mô tả bài viết
                                            <div class="col-md-10">
                                                @Html.TextBoxFor(model => model.bl_title, new { htmlAttributes = new { @class = "form-control" } })
                                                @Html.ValidationMessageFor(model => model.bl_title, "", new { @class = "text-danger" })
                                            </div>
                                        </div>

                                        <div class="form-group">
                                            Hình ảnh bài viết
                                            <div class="col-md-10">
                                                @Html.EditorFor(model => model.bl_image, new
                                           {
                                               htmlAttributes = new { @class = "form-control", @type = "file" }
                                           })
                                                @Html.ValidationMessageFor(model => model.bl_image, "", new { @class = "text-danger" })
                                            </div>
                                        </div>
                                    </div>

                                    <input type="submit" value="Thêm" class="btn btn-danger btn-user btn-block" />
                                    <hr>

                                </form>
                                <hr>

                            </div>
                        </div>
                    </div>
                </div>
            </div>

        </div>

        <!-- Bootstrap core JavaScript-->
        <script src="vendor/jquery/jquery.min.js"></script>
        <script src="vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

        <!-- Core plugin JavaScript-->
        <script src="vendor/jquery-easing/jquery.easing.min.js"></script>

        <!-- Custom scripts for all pages-->
        <script src="js/sb-admin-2.min.js"></script>




    </div>
}

<div>
    @Html.ActionLink("Quay trở lại", "Index")
</div>
