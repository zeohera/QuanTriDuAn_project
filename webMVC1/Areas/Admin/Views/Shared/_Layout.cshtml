    <script type="text/javascript">
        $('.btn_xuly').click(function (e) {
            e.preventDefault();
            var btn = $(this);
            var id = btn.data("id");
            $.ajax({
                url: "/Admin/Order/check_status",
                data: { id: id },
                dataType: "json",
                type: "POST",
                success: function (res) {
                    if (res.status == true) {
                        window.location.href = "/Admin/Order";
                    }
                }
            });
        });
    </script>
