@model PagedList.IPagedList<webMVC1.EF.Product>
@using PagedList.Mvc;
@{
    var category = (List<webMVC1.EF.Categorys>)ViewBag.category;
    var pr = (List<webMVC1.EF.Product>)ViewBag.por;
    Layout = "~/Views/Shared/_TLayout.cshtml";


}
<!-- Start Page Banner -->
<div class="page-title-area">
    <div class="d-table">
        <div class="d-table-cell">
            <div class="container">
                <div class="page-title-content">
                    <h2>Menu</h2>
                    <ul>
                        <li>
                            <a href="/">Trang chủ</a>
                        </li>
                        <li>Menu</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- End Page Banner -->
<!-- Start Pizza Area -->
<!-- End Pizza Area -->
<!-- Start Dishes Area -->
<section class="dishes-area pt-100 pb-70">
    <div class="container-fluid p-0">
        <div class="section-title">
            <h2>Thực đơn hôm nay của chúng tôi</h2>
            <p>Hãy cùng tham quan xem các món ăn hôm nay thế nào nhé</p>
        </div>
        <hr />

        <nav style="background-color:#dcabb2" class="navbar navbar-expand-md navbar-light">
            <div class="collapse navbar-collapse mean-menu" id="navbarSupportedContent">
                <div class="container">
                    <nav aria-label="breadcrumb">
                        <ul class="breadcrumb">
                            @foreach (var item in category)
                            {
                                <li class="btn btn-light"> <a class="nav-link active" style="color:black" href="Menu/@item.MetaKeywords-@item.ID">@item.Name</a></li>
                            }
                        </ul>
                    </nav>
                </div>

            </div>
        </nav>

        <hr />
        <div class="row">

            @foreach (var item in Model)
            {


                <div class="col-lg-3 col-sm-6">
                    <div class="dishes-item">
                        <div class="image">
                            <a href="/them-gio-hang?productID=@item.ID&quantity=1">
                                <img width="300" src="/Content/Image/@item.Images" alt="image">
                            </a>
                        </div>
                        <div class="content">
                            <h3>
                                <a href="/them-gio-hang?productID=@item.ID&quantity=1">@item.Name</a>
                            </h3>

                            <span>Giá tiền: @(item.Price.HasValue?item.Price.Value.ToString("N0"):"lien he")</span>
                            <hr style="background-color:antiquewhite" />
                            <span>@item.DesCription</span>

                            <div class="dishes-btn">
                                <a href="/them-gio-hang?productID=@item.ID&quantity=1" class="default-btn">Thêm vào giỏ hàng</a>
                                |
                                <a href="chi-tiet/@item.ID" class="btn btn-primary">Xem chi tiết</a>
                            </div>
                        </div>
                    </div>
                </div>
            }



        </div>
    </div>

</section>
<!-- End Dishes Area -->
<!-- Start Dishes Area -->
<!-- End Dishes Area -->
