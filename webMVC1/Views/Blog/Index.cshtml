@{

    Layout = "~/Views/Shared/_TLayout.cshtml";
    var listfooter = (List<webMVC1.EF.Blog>)ViewBag.blog;

}


<!-- Start Page Banner -->
<div class="page-title-area">
    <div class="d-table">
        <div class="d-table-cell">
            <div class="container">
                <div class="page-title-content">
                    <h2>Tin tức</h2>
                    <ul>
                        <li>
                            <a href="/">Trang chủ</a>
                        </li>
                        <li>Tin tức bài viết</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- End Page Banner -->
<!-- Start Blog Area -->
<section class="blog-area pt-100 pb-70">
    <div class="container">
        <div class="section-title">
            <h2>Tin tức mới nhất của chúng tôi</h2>
            <p>Cập nhật những thông tin mới nhất từ cửa hàng , các ưu đãi và món mới trải nghiệm</p>
        </div>

        <div class="row">
            @foreach (var item in listfooter)
            {
                <div class="col-lg-4 col-md-6">
                    <div class="blog-item">
                        <div class="image" style=" width:300px; height:300px">
                            <a href="/blog/blog_detail/@item.bl_id">
                                <img width="300px" height="300px"  src="/Content/Blog/@item.bl_image" alt="image">
                            </a>
                            <div class="date">
                                <span>@item.bl_create</span>
                            </div>
                        </div>
                        <div class="content">
                            <h3>
                                <a href="/blog/blog_detail/@item.bl_id">
                                    @item.bl_name
                                </a>
                            </h3>
                            <a href="/blog/blog_detail/@item.bl_id" class="blog-btn">Read More +</a>
                        </div>
                    </div>
                </div>
            }

        </div>
    </div>
</section>
<!-- End Blog Area -->
