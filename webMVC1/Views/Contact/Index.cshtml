    <div class="d-table">
        <div class="d-table-cell">
            <div class="container">
                <div class="page-title-content">
                    <h2>Liên lạc với chúng tôi</h2>
                    <ul>
                        <li>
                            <a href="/">Home</a>
                        </li>
                        <li>Contact</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- End Page Banner -->
<!-- Start Contact Info Area -->
<section class="contact-info-area pt-100 pb-70">
    <div class="container">
        <div class="row">
            <div class="col-lg-4 col-md-6 col-sm-6">
                <div class="contact-info-box mb-30">
                    <div class="icon">
                        <a href="mailto:Buichibao1011@gmail.com">
                            <i class="las la-envelope"></i>
                        </a>
                    </div>
                    <h3>Email Here</h3>
                    <p></p>
                </div>
            </div>

            <div class="col-lg-4 col-md-6 col-sm-6">
                <div class="contact-info-box mb-30">
                    <div class="icon">
                        <a href="https://www.google.com/maps/place/Ng%C3%B5+32+Phan+V%C4%83n+Tr%C6%B0%E1%BB%9Dng,+D%E1%BB%8Bch+V%E1%BB%8Dng+H%E1%BA%ADu,+C%E1%BA%A7u+Gi%E1%BA%A5y,+H%C3%A0+N%E1%BB%99i,+Vi%E1%BB%87t+Nam" target="_blank">
                            <i class="las la-map-marker"></i>
                        </a>
                    </div>

                    <h3>Dẫn tôi đến đó </h3>
                    <p></p>
                </div>
            </div>

            <div class="col-lg-4 col-md-6 col-sm-6">
                <div class="contact-info-box mb-30">
                    <div class="icon">
                        <a href="tel:0355978258">
                            <i class="las la-phone"></i>
                        </a>
                    </div>
                    <h3>Call Here</h3>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- End Contact Info Area -->
<!-- Start Contact Area -->
<section class="contact-area pb-100">
    <div class="container">
        <div class="section-title">
            <h2>Nhắn vào đây bất cứ thắc mặc , phản hồi nào</h2>
            <p>Chúng tôi quan tâm đến trải nghiệm khách hàng nên quan tâm đến bất cứ điều gì hoặc góp ý xin vui lòng liên hệ</p>
        </div>
        <div class="content">
            <div class="row">
                <div class="col-md-12">
                    <h2> Thông tin liên hệ</h2>
                    @Html.Raw(Model.content)

                    <br />
                    <hr />
                    <h3>Phản hồi ở đây</h3>
                    <hr />
                    <form  method="post" >
                        <div class="form-group">
                            <div class="row">
                                <div class="col-lg-6 col-md-6">
                                    <div class="form-group">
                                        <label>
                                            Họ và tên
                                            <span class="required">*</span>
                                        </label>
                                        <input type="text"  id="txtName" class="form-control">
                                    </div>
                                </div>

                                <div class="col-lg-6 col-md-6">
                                    <div class="form-group">
                                        <label>
                                            Số điện thoại
                                            <span class="required">*</span>
                                        </label>
                                        <input type="text"  id="txtPhone" class="form-control">
                                    </div>
                                </div>
                                <div class="col-lg-6 col-md-6">
                                    <div class="form-group">
                                        <label>
                                            Địa chỉ
                                            <span class="required">*</span>
                                        </label>
                                        <input type="text"  id="txtAddress" class="form-control">
                                    </div>
                                </div>
                                <div class="col-lg-6 col-md-6">
                                    <div class="form-group">
                                        <label>
                                            Email
                                            <span class="required">*</span>
                                        </label>
                                        <input type="email"  id="txtEmail" class="form-control">
                                    </div>
                                </div>
                                <div class="col-lg-6 col-md-6">
                                    <div class="form-group">
                                        <label>
                                            Tin nhắn
                                            <span class="required">*</span>
                                        </label>
                                        <div class="col-lg-12 col-md-12">
                                            <div class="form-group">
                                                <textarea  id="txtYeucau" cols="30" rows="5" placeholder="Order Notes" class="form-control"></textarea>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <button type="submit" class="default-btn" id="btnSend">Send </button>
                        </div>
                    </form>
                </div>
            </div>

        </div>


    </div>
</section>
<!-- End Contact Area -->
